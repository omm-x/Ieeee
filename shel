#include<stdio.h>
void shellSort(int a[], int n){
    int gap,i,j,temp;
    
    for(gap=n/2;gap>0;gap /=2){
        for(i=gap;i<n;i++){
            temp=a[i];
            j=i;

            while(j>=gap && a[j-gap]>temp){
                a[j]=a[j-gap];
                j -= gap;
            }
            a[j]=temp;
        }
    }
}
int main() {
    int n, i;
    printf("Enter number of elements: ");
    scanf("%d", &n);

    int a[n];
    printf("Enter elements : ");
    for (i = 0; i < n; i++)
        scanf("%d", &a[i]);
    
    printf("unsorted array= \n");
    for(i=0;i<n;i++){
        printf("%d\t", a[i]);
    }

    shellSort(a, n);

    printf("\nSorted array: ");
    for (i = 0; i < n; i++)
        printf("%d\t ", a[i]);

    return 0;
}
