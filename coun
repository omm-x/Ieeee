#include <stdio.h>

void countingSort(int a[], int n)
{
    int i, max = a[0];

    for(i = 1; i < n; i++)
        if(a[i] > max)
            max = a[i];

    int count[max + 1];

    for(i = 0; i <= max; i++)
        count[i] = 0;

    for(i = 0; i < n; i++)
        count[a[i]]++;

    int index = 0;

    for(i = 0; i <= max; i++)
    {
        while(count[i] > 0)
        {
            a[index] = i;
            index++;
            count[i]--;
        }
    }
}

int main()
{
    int n, i;
    printf("Enter number of elements: ");
    scanf("%d", &n);

    int a[n];
    printf("Enter elements:\n");
    for(i = 0; i < n; i++)
        scanf("%d", &a[i]);

    countingSort(a, n);

    printf("Sorted array:\n");
    for(i = 0; i < n; i++)
        printf("%d ", a[i]);

    return 0;
}