#include <stdio.h>
#include <stdlib.h>

#define N 5
#define MAX N

int A[N][N];
char c[N];
int d[N], P[N];
int q[MAX];
int front = -1, rear = -1;

void init() {
    front = -1;
    rear = -1;
}

int isEmpty() {
    return (front == -1);
}

void enqueue(int item) {
    if ((rear + 1) % MAX == front) {
        printf("Queue overflow\n");
    } else {
        if (front == -1) front = 0;
        rear = (rear + 1) % MAX;
        q[rear] = item;
    }
}

int dequeue() {
    int item;
    if (isEmpty()) {
        printf("Queue underflow\n");
        return -1;
    } else {
        item = q[front];
        if (front == rear) {
            front = -1;
            rear = -1;
        } else {
            front = (front + 1) % MAX;
        }
        return item;
    }
}

void BFS(int s) {
    int u, v;
    init();
    for (int i = 0; i < N; i++) {
        c[i] = 'w';
        d[i] = -1;
        P[i] = -1;
    }
    c[s] = 'g';
    d[s] = 0;
    P[s] = -1;
    enqueue(s);
    printf("\nBFS Traversal: ");
    while (!isEmpty()) {
        u = dequeue();
        printf("%d ", u + 1);
        for (v = 0; v < N; v++) {
            if (A[u][v] == 1 && c[v] == 'w') {
                c[v] = 'g';
                d[v] = d[u] + 1;
                P[v] = u;
                enqueue(v);
            }
        }
        c[u] = 'b';
    }

    printf("\n\nNode | Distance | Parent\n");
    printf("--------------------------\n");
    for (int i = 0; i < N; i++) {
        if (i == s)
            printf("%4d | %8d | %6s\n", i + 1, d[i], "Start");
        else if (d[i] == -1)
            printf("%4d | %8s | %6s\n", i + 1, "N/A", "N/A");
        else
            printf("%4d | %8d | %6d\n", i + 1, d[i], P[i] + 1);
    }
}

int main() {
    int choice, i, j;
    int start_node;
    for (i = 0; i < N; i++) {
        for (j = 0; j < N; j++) {
            A[i][j] = 0;
        }
    }

    while (1) {
        printf("\nMenu:\n1. Input Graph\n2. Display Graph\n3. Perform BFS\n4. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);

        switch (choice) {
            case 1:
                printf("Enter the adjacency matrix for the graph (%d x %d):\n", N, N);
                for (i = 0; i < N; i++) {
                    for (j = 0; j < N; j++) {
                        printf("A[%d][%d]: ", i + 1, j + 1);
                        scanf("%d", &A[i][j]);
                    }
                }
                break;

            case 2:
                printf("Adjacency Matrix (Graph):\n");
                for (i = 0; i < N; i++) {
                    for (j = 0; j < N; j++) {
                        printf("%d ", A[i][j]);
                    }
                    printf("\n");
                }
                break;

            case 3:
                printf("Enter the starting node for BFS (1 to %d): ", N);
                scanf("%d", &start_node);
                if (start_node < 1 || start_node > N) {
                    printf("Invalid starting node.\n");
                } else {
                    BFS(start_node - 1);
                }
                break;

            case 4:
                printf("Exiting.\n");
                return 0;

            default:
                printf("Invalid choice.\n");
        }
    }
    return 0;
}